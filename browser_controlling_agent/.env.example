# Browser Agent Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# AI Model API Keys
# ============================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Key
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama Base URL (for local models)
OLLAMA_BASE_URL=http://localhost:11434/v1

# ============================================
# Model Selection
# ============================================
# Preferred model: auto, openai, gemini, anthropic, ollama
PREFERRED_MODEL=auto

# Specific model names
OPENAI_MODEL=gpt-4o-mini
GEMINI_MODEL=gemini-2.0-flash
ANTHROPIC_MODEL=claude-3-sonnet-20240229
OLLAMA_MODEL=llama3:8b

# ============================================
# Search Engine Configuration
# ============================================
# Default search engine: google, duckduckgo, bing
DEFAULT_SEARCH_ENGINE=duckduckgo

# Google Custom Search API credentials
# Get these from: https://console.cloud.google.com/apis/credentials
# and https://programmablesearchengine.google.com/
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_SEARCH_ENGINE_ID=your-google-cse-id-here
# Alternative name for Google CSE ID
# GOOGLE_CSE_ID=your-google-cse-id-here

# Bing Search API Key
# Get from: https://www.microsoft.com/en-us/bing/apis/bing-web-search-api
BING_SEARCH_API_KEY=your-bing-api-key-here

# Maximum search results per query
MAX_SEARCH_RESULTS=10

# ============================================
# Browser Settings
# ============================================
# Run browser in headless mode (true/false)
BROWSER_HEADLESS=false

# Browser window dimensions
BROWSER_WIDTH=1200
BROWSER_HEIGHT=800

# Page load timeout in seconds
PAGE_LOAD_TIMEOUT=30

# Remote debugging port
BROWSER_DEBUG_PORT=9222

# Allow debugger to attach (true/false)
BROWSER_ATTACH_DEBUGGER=true

# ============================================
# Security Settings
# ============================================
# Comma-separated list of allowed domains (optional)
# ALLOWED_DOMAINS=example.com,trusted-site.org

# ============================================
# Logging and Debugging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable screenshots (true/false)
ENABLE_SCREENSHOTS=true
